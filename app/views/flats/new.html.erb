

<div class="container">
  <h1>Add a new flat</h1>
  <%= simple_form_for (@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit "Add flat",  class: "btn btn-primary" %>
    <%= link_to "Cancel", flats_path, class: "btn btn-danger" %>
  <% end %>
</div>
