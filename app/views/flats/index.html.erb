

<div class="container">
  <h1>All available flats (<%= @flats.count %>)</h1>
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="https://source.unsplash.com/1600x900/?apartment" alt="Card image cap">
          <div class="card-body bg-light">
            <h4 class="card-title"><%= flat.name %></h4>
            <p class="card-text"><%= flat.address %></p>
            <div class="d-flex align-items-end justify-content-start">
              <div class="d-flex justify-content-start">
                <i class="material-icons pr-2">people</i> <span class="pr-2"><%= flat.number_of_guests %></span>
              </div>
              <div class="d-flex justify-content-start">
                <i class="material-icons pr-2">euro_symbol</i> <span class="pr-2"><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="card-body">
            <%= link_to 'More info', flat_path(flat) %>
          </div>
        </div>
      <% end %>
    </div>
</div>
